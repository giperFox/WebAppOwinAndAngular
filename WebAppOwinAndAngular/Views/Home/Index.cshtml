<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS, and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-large">Learn more &raquo;</a></p>
</div>
<div class="row" ng-app="app1">

    <script>
        (function ($) {

            angular.module('app1', []).controller('IndexController', function() {
                this.age = 26;
                this.FirstName = 'Alex';
                this.LastName = 'Kasatkin';
            });

        })(jQuery);
    </script>


    <div class="col-md-4" ng-controller="IndexController as icontroller">
        First Name: <input id="txtFirstName" type="text" ng-model="icontroller.FirstName" /><br />
        Last Name: <input id="txtLastName" type="text" ng-model="icontroller.LastName" /><br />

        <br />
        Full Name: {{ icontroller.FirstName + " " + icontroller.LastName }}
    </div>
    

    @using (Html.BeginForm("TestPostBack", "Home", FormMethod.Post))
    {
        @Html.TextBox("TestTextBox", "Some Value1")
        @Html.TextBox("TestTextBox", "Some Value2")

        <input id="txtHtmlControl" name="txtHtmlControl" type="text" value="TEWOI" />
        <input type="submit" />
    }
</div>
